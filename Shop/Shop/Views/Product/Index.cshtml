@model Shop.Models.ProductViewModel
<!DOCTYPE html>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <div class="card">
                <img class="card-img-top" src="https://www.asus.com/media/global/products/tmjoryooiwa4hfiz/P_setting_fff_1_90_end_600.png" alt="Graphics card" />
            </div>
            <h3>@Model.Price руб</h3>
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-text">@Model.Description</h5>
            </div>
        </div>
        <div class="col-md-1">
            <a href="/home/index?page=1">Назад</a>
            <a href="/cart/index/@Model.Id">Добавить в корзину</a>
        </div>
    </div>
</div>