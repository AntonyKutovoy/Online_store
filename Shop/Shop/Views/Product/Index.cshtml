@model Shop.Models.Product
<!DOCTYPE html>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <div class="card">
                <img class="card-img-top" src="https://www.kustompcs.co.uk/images/detailed/36/rtx3070b.png" alt="Graphics card" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-text">@Model.Description</h5>
            </div>
        </div>
        <div class="col-md-1">
            <a href="/home/index?page=1">Назад</a>
            <p class="text-right">Добавить в корзину</p>
        </div>
    </div>
</div>