@model Shop.Models.ProductViewModel

<div class="container">
    <div class="row">
        <form asp-action="Create" asp-controller="Product" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Name">Название</label>
                <input type="text" asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Price">Цена</label>
                <input asp-for="Price" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Сохранить</button>
        </form>
    </div>
</div>
