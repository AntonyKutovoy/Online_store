@model IEnumerable<Shop.Models.ProductViewModel>
<!DOCTYPE html>

<div class="container">
    <section.text-center mb-4>
            <div class="row wow fadeIn">
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="https://ingame.uz/wp-content/uploads/2020/12/2_optimized-14-300x300.png" alt="Graphics card" />
                            <div class="card-body text-center">
                                <a href="/product/index/@product.Id"><h5>@product.Name</h5></a>
                                <h5>@product.Price руб</h5>
                                <a class="btn btn-primary" href="/cart/add/@product.Id" role="button">Добавить в корзину</a>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
            <ul class="pagination">
                @for (int i = 1; i <= (int)(ViewData["countPages"]); i++)
                {
                    <li class="page-item"><a href="/home/index?page=@i" class="page-link">@i</a></li>
                }
            </ul>
    </section.text-center>
</div>